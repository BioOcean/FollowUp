/* pages/message/message.wxss */
.message-container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 15px;
  padding-top: 50px; /* 适配安全区域，通常状态栏高度约为44px */
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
  z-index: 100;
}

.nav-back {
  padding: 5px;
}

.nav-back-icon {
  font-size: 24px;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.nav-right {
  padding: 5px;
  width: 60px; /* 预留空间保持布局平衡 */
}

/* 操作区域 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 15px;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.message-count {
  flex: 1;
}

.count-text {
  font-size: 14px;
  color: #666;
}

.action-buttons {
  display: flex;
  align-items: center;
}

.mark-all-read-btn {
  font-size: 14px;
  color: #007aff;
  padding: 6px 12px;
  border: 1px solid #007aff;
  border-radius: 6px;
  background-color: transparent;
  transition: all 0.2s ease;
}

.mark-all-read-btn:active {
  background-color: #007aff;
  color: #fff;
  transform: scale(0.95);
}

/* 消息列表 */
.message-list {
  height: calc(100vh - 140px); /* 减去导航栏(约80px)和操作区域(约60px)的高度 */
  background-color: #f8f8f8;
}

.message-item {
  display: flex;
  align-items: flex-start;
  padding: 15px;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}

.message-item:active {
  background-color: #f8f8f8;
}

/* 未读红点 */
.unread-dot {
  width: 8px;
  height: 8px;
  background-color: #ff4444;
  border-radius: 50%;
  position: absolute;
  top: 15px;
  left: 8px;
}

/* 消息内容区 */
.message-content {
  flex: 1;
  margin-left: 10px;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8px;
}

.message-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 10px;
  line-height: 1.4;
}

.message-time {
  font-size: 12px;
  color: #999;
  white-space: nowrap;
}

.message-preview {
  font-size: 14px;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.message-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.message-type {
  font-size: 12px;
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 2px 8px;
  border-radius: 10px;
}

.unread-badge {
  font-size: 12px;
  color: #ff4444;
  background-color: rgba(255, 68, 68, 0.1);
  padding: 2px 8px;
  border-radius: 10px;
}

/* 加载更多和状态提示 */
.load-more, .no-more, .empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  color: #999;
  font-size: 14px;
}

.loading {
  display: flex;
  align-items: center;
}

.loading-text {
  margin-left: 5px;
}

.empty-state {
  flex-direction: column;
  padding: 60px 20px;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 20px;
  opacity: 0.5;
}

.empty-text {
  color: #ccc;
  font-size: 16px;
}

/* 消息详情弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 85%;
  max-width: 500px;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  margin: 20px;
  animation: modalShow 0.3s ease-out;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(30px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fafafa;
  flex-shrink: 0;
}

.modal-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 15px;
  line-height: 1.4;
  word-break: break-word;
  max-height: 56px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.modal-close {
  font-size: 20px;
  color: #666;
  padding: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28px;
  height: 28px;
  border-radius: 14px;
  transition: all 0.2s;
  background-color: rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.modal-close:active {
  background-color: rgba(0, 0, 0, 0.1);
  transform: scale(0.95);
}

.modal-body {
  padding: 0;
  flex: 1;
  overflow-y: auto;
  min-height: 0;
}

.modal-meta {
  margin: 0;
  padding: 16px 20px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 10px;
  background-color: #fafafa;
}

.modal-time {
  font-size: 12px;
  color: #999;
}

.modal-type {
  font-size: 11px;
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.12);
  padding: 3px 8px;
  border-radius: 12px;
  font-weight: 500;
}

.modal-footer {
  padding: 16px 20px;
  border-top: 1px solid #f0f0f0;
  background-color: #fafafa;
  flex-shrink: 0;
}

.modal-btn {
  width: 100%;
  height: 44px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  transition: all 0.2s;
  box-shadow: 0 2px 8px rgba(0, 122, 255, 0.3);
}

.modal-btn::after {
  border: none;
}

.modal-btn:active {
  background-color: #0056b3;
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(0, 122, 255, 0.4);
}

/* rich-text 内容样式 */
.modal-body rich-text {
  display: block;
  padding: 20px;
  font-size: 15px;
  line-height: 1.7;
  color: #333;
  word-break: break-word;
  min-height: 100px;
}

/* 确保rich-text内的图片适配 */
.modal-body rich-text img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 10px 0;
  border-radius: 4px;
}

/* 消息红点 */
.message-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  flex-shrink: 0;
  margin-right: 12px;
  margin-top: 8px;
}

.message-dot.unread {
  background-color: #ff4d4f;
}

.message-dot.read {
  background-color: #d9d9d9;
}

/* 加载状态提示 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.loading-text {
  color: #999;
  font-size: 14px;
  margin-left: 5px;
}

/* 无更多数据状态 */
.no-more-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30px 20px;
  background-color: #fafafa;
  margin: 10px 15px;
  border-radius: 8px;
}

.no-more-text {
  color: #ccc;
  font-size: 13px;
  position: relative;
}

.no-more-text::before,
.no-more-text::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30px;
  height: 1px;
  background-color: #e0e0e0;
}

.no-more-text::before {
  right: 100%;
  margin-right: 10px;
}

.no-more-text::after {
  left: 100%;
  margin-left: 10px;
}